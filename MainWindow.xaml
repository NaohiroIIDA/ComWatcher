<Window x:Class="ComWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="COM Watcher" Height="420" Width="500">

        
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="BtnRefresh" Width="100" Height="28" Click="BtnRefresh_Click">更新</Button>
            <TextBlock Name="TxtStatus" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="検出されたCOMポート（デバイス名つき）" Margin="0,0,0,6"/>
            <ListBox Name="ListPorts" Grid.Row="1" FontSize="14"/>
        </Grid>
    </DockPanel>
</Window>